<%- include ("../_layout/adminHeader.ejs") %> 
<h2 class="page-title">Pages</h2>
<a href="/admin/pages/add-page/" class="btn btn-primary">Add a New Page</a>
<br><br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% pages.forEach(function(page) { %>
        <tr id="id_<%= page._id %>" class="<%= page.slug %>">
            <td><%= page.title %></td>
            <td><a href="/admin/pages/edit-page/<%= page._id %>">Edit</a></td>
            <% if (page.slug=="home") { %>
                <td></td>
                <% } else { %>
                <td><a href="/admin/pages/delete-page/<%= page._id %>">Delete</a></td>
                <% } %>
        </tr>
        <% }); %>
    </tbody>
</table>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

<%- include ("../_layout/adminFooter.ejs") %>